<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme" />

    <style name="Theme.HomeClipboards.Splash" parent="Theme.AppCompat.DayNight.NoActionBar" />

    <style name="Theme.HomeClipboards.Activity" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="actionBarStyle">@style/Theme.HomeClipboards.ActionBar</item>
    </style>

    <style name="Theme.HomeClipboards.ActionBar" parent="Widget.MaterialComponents.ActionBar.Primary">
        <item name="background">@color/statusBarColor</item>
    </style>

</resources>